<!DOCTYPE html>
<html lang="zh-cn">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="x-ua-compatible" content="ie=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0,user-scalable=no">

  {% block libcss %}{% endblock %}
</head>

<body {% if env === 'development'%} style="display: none;"{% endif %}>
  {% from '../macros/js.njk' import loadjs  %}

  {% block header %}
  {% include '../component/header.njk' %}
  {% endblock %}

  {% block main %}{% endblock %}

  {% block sidetool %}
  {% include '../component/sidetool.njk' %}
  {% endblock %}

  {% block footer %}
  {% include '../component/footer.njk' %}
  {% endblock %}

  {% block jqueryjs %}
  <script src="{{jsPath}}/libs/jquery-1.11.3.min.js"></script>
  {% endblock %}

  <script>
    {# dump 在一个对象上调用JSON.stringify，并将结果输出到模板上 #}
    var globalConfig = {{ globalConfig | dump | safe }};
  </script>

  {% block pageData %}
  {% endblock %}

  {% block devjs %}
  {% endblock %}

  {% block js %}
  {% endblock %}
</body>

</html>